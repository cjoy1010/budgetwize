generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model to store Plaid item information linked to a user
model UserPlaidItem {
  id        String   @id @default(cuid()) // Unique ID for this specific link
  userId    String   @unique // Clerk User ID - Ensure this is unique per user
  itemId    String   @unique // Plaid Item ID - Useful for identifying the link
  encryptedAccessToken String @db.Text // Store the encrypted token (use TEXT for potentially longer strings)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId]) // Add an index for faster lookups by userId
}

